<launch>
    <env name="ROSCONSOLE_CONFIG_FILE" value="$(find next_best_view)/log/rosconsole.config" />
    <include file="$(find next_best_view)/launch/RobotModelServiceSim.launch" /> 
    <node pkg="next_best_view" type="next_best_view" name="nbv" output="screen" >
		<!-- get external params from  robot_model_services package-->
		<rosparam file="$(find robot_model_services)/rsc/robot_model_services_settings_sim.yaml"/>
		<rosparam file="$(find robot_model_services)/rsc/robot_model_frames.yaml"/>
	  	<rosparam file="$(find robot_model_services)/rsc/TopicsConfig.yaml"/>
		
	  	<rosparam file="$(find next_best_view)/rsc/next_best_view_settings_sim.yaml"/>
	  	<rosparam file="$(find next_best_view)/rsc/VisualizationConfig.yaml"/>
	  	<rosparam file="$(find next_best_view)/rsc/TopicsConfig.yaml"/>
	  	<!-- this is used by costmap -->
        <rosparam file="$(find next_best_view)/rsc/costmap_params.yaml" command="load"/>
        <!-- CropBoxListTableFitWithNormals CropBoxListWholeRoomWithNormals-->
        <param name="mCropBoxListFilePath" value="$(find next_best_view)/rsc/CropBoxListTableFit.xml"/>
	  	<param name="mMapsImagePath" value="$(find next_best_view)/rsc"/>
	</node>
</launch>
